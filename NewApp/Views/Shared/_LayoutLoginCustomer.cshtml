        </div>
        <div id="customerCartContainer">
            @*cart aside container*@
            <div class="h-100 bg-white" style="width:25%;" id="customerCartDisplay">
                <div class="w-100">
                    <button type="button" class="close float-start rounded-1" aria-label="Close" onclick="closeCartDisplay()" style=" outline: none; border: none;">
                        <span aria-hidden="true">&times;</span>
                    </button>
