                @*signout*@
                <div class="w-100 d-flex justify-content-center align-items-center">
                    @if (Session["user"].Equals("customer"))
                    {
                        <form method="post" { action="@Url.Content("~/LoginCustomer/Signout")" }>
                            <button type="submit" id="btnCustomerSignOut">Sign Out</button>
                        </form>
                    }
                    else if (Session["user"].Equals("stylist"))
                    {
                <form method="post" { action="@Url.Content("~/Stylist/Signout")" }>
